<%
    if (page.title !== 'about') {
%>
    <aside class="ui-sidebar<%- is_post() ? '' : ' animated fadeInRight' %>">
        <% if(is_post()) { %>
            <section class="ui-card ui-catalog">
                    <h3 class="ui-card-head">
                        <p>
                            <i class="ion-ios-list"></i>
                            <span>文章目录</span>
                        </p>
                    </h3>
                    <div class="ui-card-body">
                        <%- partial("_widget/catalog", {post: page})%>
                    </div>
                </section>
        <% } else { %>
            <section class="ui-card">
                <h3 class="ui-card-head">
                    <p>
                        <i class="ion-ios-pricetags"></i>
                        <span>热门标签</span>
                    </p>
                </h3>
                <div class="ui-card-body">
                    <%- partial('_widget/tags') %>
                </div>
            </section>
    
            <section class="ui-card">
                <h3 class="ui-card-head">
                    <p>
                        <i class="ion-android-list"></i>
                        <span>文章分类</span>
                    </p>
                </h3>
                <div class="ui-card-body">
                    <%- partial('_widget/categories') %>
                </div>
            </section>
        <% } %>
    </aside>
<%
    }
%>